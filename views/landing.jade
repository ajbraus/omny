        // Begin MailChimp Signup Form
        #mc_embed_signup
          form#mc-embedded-subscribe-form.validate(action='//goldenchai.us12.list-manage.com/subscribe/post?u=c5f1d3c8412077caf918384bf&amp;id=cb92d5188f', method='post', name='mc-embedded-subscribe-form', target='_blank', novalidate='')
            .form-group#mc_embed_signup_scroll
              .row
                .col-xs-6
                  .mc-field-group
                    input.form-control#mce-FNAME(type='text', value='', name='FNAME', placeholder="First Name*")
                .col-xs-6
                  .mc-field-group
                    input.form-control#mce-LNAME(type='text', value='', name='LNAME', placeholder="Last Name*")  
            .form-group
              .mc-field-group
                input.form-control#mce-EMAIL.required.email(type='email', value='', name='EMAIL', placeholder="Email*")
            #mce-responses.clear
              #mce-error-response.response(style='display:none')
              #mce-success-response.response(style='display:none')
